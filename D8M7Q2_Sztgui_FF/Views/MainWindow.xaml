<Window x:Class="D8M7Q2_Sztgui_FF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8M7Q2_Sztgui_FF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" >
            <Button  Content="Add student" Height="30" Margin="5" FontSize="16" Click="Add_student_click"/>
            <ComboBox x:Name="ClassSelector" Width="200" Height="30" Margin="5"
                ItemsSource="{Binding ClassNames}" 
                SelectedItem="{Binding SelectedClassName, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>

            <ListBox x:Name="FilteredStudentsListBox" Height="500"
               ItemsSource="{Binding FilteredStudents}" HorizontalContentAlignment="Stretch" Margin="0,50,0,0">
               <ListBox.ItemContainerStyle>
                   <Style TargetType="ListBoxItem">
                       <Setter Property="BorderThickness" Value="1" />
                       <Setter Property="BorderBrush" Value="Black" />
                       <Setter Property="Margin" Value="5" />
                   </Style>
               </ListBox.ItemContainerStyle>
               <ListBox.ItemTemplate>
                   <DataTemplate>
                       <Grid>
                           <Grid.ColumnDefinitions>
                               <ColumnDefinition Width="*" />
                               <ColumnDefinition Width="Auto" />
                           </Grid.ColumnDefinitions>
                           <Label Content="{Binding FullName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20" Grid.Column="0"/>
                            <TextBlock Text="{Binding ClassName, StringFormat='{}Class: {0}'}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Column="1"/>
                       </Grid>
                   </DataTemplate>
               </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!--<ListBox x:Name="lbox_left" Grid.Column="0"
         ItemsSource="{Binding Students}"
         HorizontalContentAlignment="Stretch" Margin="0,50,0,0">
