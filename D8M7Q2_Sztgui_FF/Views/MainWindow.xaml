<Window x:Class="D8M7Q2_Sztgui_FF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8M7Q2_Sztgui_FF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1400">
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Margin="10" Name="SearchBar" Width="650" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Grid.Column="0" Margin="10" Width="105" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Search" Click="Search"/>
        
        <ListBox x:Name="lbox_left" Grid.Column="0"
         ItemsSource="{Binding Students}"
         HorizontalContentAlignment="Stretch" Margin="0,50,0,0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="Margin" Value="5" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label Content="{Binding FullName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20"/>
                        <Label Content="{Binding ClassName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="20"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
