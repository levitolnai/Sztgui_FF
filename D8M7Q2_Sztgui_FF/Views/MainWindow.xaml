                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label Content="{Binding FirstName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20"/>
                        <Label Content="{Binding LastName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
                        <Label Content="{Binding ClassName}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="20"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
    </Grid>
</Window>
