<Window x:Class="D8M7Q2_Sztgui_FF.Views.StudentDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8M7Q2_Sztgui_FF.Views"
        mc:Ignorable="d"
        Title="StudentDetailWindow" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <Label Content="First name" FontSize="20"/>
            <TextBox x:Name="FNTB" Text="{Binding FirstName}" MinHeight="30" FontSize="20"/>
            <Label Content="Last name" FontSize="20"/>
            <TextBox x:Name="LNTB" Text="{Binding LastName}" MinHeight="30" FontSize="20"/>
            <Label Content="Class" FontSize="20"/>
            <TextBox x:Name="CNTB" Text="{Binding ClassName}" MinHeight="30" FontSize="20"/>
            <Label Content="Mother's name" FontSize="20"/>
            <TextBox x:Name="MNTB" Text="{Binding MotherName}" MinHeight="30" FontSize="20"/>
            <Label Content="Address" FontSize="20"/>
            <TextBox x:Name="ATB" Text="{Binding Address}" MinHeight="30" FontSize="20"/>
            <Button Content="Save" Width="150" Height="40" FontSize="25" Margin="20" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
