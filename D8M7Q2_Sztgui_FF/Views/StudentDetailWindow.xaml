<Window x:Class="D8M7Q2_Sztgui_FF.Views.StudentDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8M7Q2_Sztgui_FF.Views"
        mc:Ignorable="d"
        Title="StudentDetailWindow" Height="450" Width="800">
    
    <Grid>
        <StackPanel>
            <Label Content="First name" FontSize="20"/>
            <TextBox Text="{Binding FirstName}" MinHeight="30" FontSize="20"/>
            <Label Content="Second name" FontSize="20"/>
            <TextBox Text="{Binding LastName}" MinHeight="30" FontSize="20"/>
            <Label Content="Class" FontSize="20"/>
            <TextBox Text="{Binding ClassName}" MinHeight="30" FontSize="20"/>
            <Button Content="Save" Width="350" Height="30" FontSize="20" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
