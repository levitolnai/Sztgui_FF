<Window x:Class="D8M7Q2_Sztgui_FF.Views.SubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8M7Q2_Sztgui_FF.Views"
        mc:Ignorable="d"
        Title="SubjectWindow" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Subject name" FontSize="20"/>
            <TextBox Text="{Binding Name}" MinHeight="30" FontSize="20" x:Name="SubjectNameTextBox"/>
            <Label Content="First semester" FontSize="20"/>
            <TextBox Text="{Binding FirstSemester}" MinHeight="30" FontSize="20" x:Name="FirstSemesterTextBox"/>
            <Label Content="Second semester" FontSize="20"/>
            <TextBox Text="{Binding SecondSemester}" MinHeight="30" FontSize="20" x:Name="SecondSemesterTextBox"/>
            <Button Content="Save" Width="150" Height="40" FontSize="25" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
